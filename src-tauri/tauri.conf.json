{
  "productName": "YTAudioBar",
  "version": "1.0.1",
  "identifier": "com.ytaudiobar.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "linux": {
      "deb": {
        "depends": []
      }
    }
  },
  "plugins": {
    "process": {
      "active": true
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/ilyassan/ytaudiobar/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IERFQzI5RURBRUU2QzRBOTQKUldTVVNtenUycDdDM29iQ0RubndqcnVsM29EMlBqaG5JSEFOdCtiKzhqRWk3L1hXT3JEU3NuUkQK",
      "windows": {
        "installMode": "passive"
      }
    }
  },
  "app": {
    "windows": [
      {
        "title": "YTAudioBar",
        "width": 380,
        "height": 500,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "alwaysOnTop": true,
        "visible": false,
        "center": false,
        "skipTaskbar": true,
        "focus": false,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "core:event:allow-listen",
            "core:event:allow-emit",
            "shell:default",
            "shell:allow-open",
            "dialog:default",
            "dialog:allow-open",
            "global-shortcut:default",
            "global-shortcut:allow-is-registered",
            "global-shortcut:allow-register",
            "global-shortcut:allow-register-all",
            "global-shortcut:allow-unregister",
            "global-shortcut:allow-unregister-all",
            "updater:default",
            "updater:allow-check",
            "updater:allow-download",
            "updater:allow-install",
            "updater:allow-download-and-install"
          ]
        }
      ]
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false,
      "tooltip": "YTAudioBar"
    }
  }
}
